<component name="ShowDetailEpisodes" extends="BaseScreen">
  <script type="text/brightscript" uri="pkg:/components/Screens/ShowDetailScreen/ShowDetailEpisodes/ShowDetailEpisodes.brs" />
  <interface>
    <field id="content" type="array" alwaysNotify="true" onChange="showContent" />
    <field id="hideNavbar" type="boolean" alias="detatilsEpisode.hideNavBar" alwaysNotify="true" onChange="onHideNavbar" />
    <field id="focusToImg" type="boolean" alwaysNotify="true" onChange="onFocusToImg" />
    <field id="preview" type="assocarray" alwaysNotify="true" />
    <field id="changeAllowFocus" type="boolean" alwaysNotify="true" />
    <field id="hideEpisodeView" type="boolean" alwaysNotify="true" onChange="hideEpisodeView" />
    <field id="passFocusToNav" type="boolean" alias="detatilsEpisode.passFocusToNav" alwaysNotify="true" onChange="onFocusPass" />
    <field id="passFocusToNavi" type="boolean" alias="detatilsEpisode.passFocusToNavi" alwaysNotify="true" />
    <field id="sentFocusToEpisodeF" type="boolean" alwaysNotify="true" alias="detatilsEpisode.sentFocusToEpisodeF" />
  </interface>

  <children>
    <EpisodeDetailScreen id="detatilsEpisode" backgroundColor="#EDEDED" visible="false" />
    <Group id="EpisodeGroup">
      <Rectangle id="container" translation="[0, 140]">
        <Poster id="backgroundPoster" translation="[552, 0]" width="1368" height="768" loadDisplayMode="scaleToFill" />
        <Poster id="backgroundGradient" uri="pkg:/images/$$RES$$/rectograd.png" translation="[0, 0]" width="960" height="780" loadDisplayMode="scaleToFill" />
        <LayoutGroup id="textContainer" translation="[80, 210]" itemSpacings="[30.0]">
          <Label id="titleSerial" color="#2C2E35" width="424" maxLines="3" wrap="true" />
          <Label id="descriptionSerial" color="#000000" width="760" maxLines="4" wrap="true" lineSpacing="3" />
        </LayoutGroup>
      </Rectangle>
      <RowList id="episodeList" translation="[80, 828]" itemComponentName="CustomItemComponent" rowLabelOffset="[[0, 20]]" drawFocusFeedback="true" />
    </Group>

    <Animation id="upListAnimation" duration="0.5" repeat="false" easeFunction="inOutQuad">
      <Vector2DFieldInterpolator id="translationInterp" key="[0.0,1.0]" keyValue="[[0, 140],[0, -200]]" fieldToInterp="container.translation" />
      <Vector2DFieldInterpolator id="translationInterp3" key="[0.0,1.0]" keyValue="[[80, 828], [80, 588]]" fieldToInterp="episodeList.translation" />
    </Animation>
    <Animation id="downListAnimation" duration="0.5" repeat="false" easeFunction="inOutQuad">
      <Vector2DFieldInterpolator id="translationInterp" key="[0.0,1.0]" keyValue="[[0, -200],[0, 140]]" fieldToInterp="container.translation" />
      <Vector2DFieldInterpolator id="translationInterp3" key="[0.0,1.0]" keyValue="[[80, 588],[80, 828]]" fieldToInterp="episodeList.translation" />
    </Animation>
  </children>
</component>